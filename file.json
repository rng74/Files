{
  "$jason": {
    "head": {
      "title": "Test { ˃̵̑ᴥ˂̵̑}",
      "actions": {
        "$foreground": {
          "type": "$reload"
        }
      }
    },
    "body": {
      "style": {
        "background": "#ffffff",
        "border": "none"
      },
      "header" : {
      	"title": "Test",
      	"search": {
          "name": "query_text",
          "placeholder": "Search something",
          "style": {
            "background": "#e0e0e0",
            "color": "#898888"
          },
          "action": {
            "type": "$util.alert",
            "options": {
              "title": "You've entered:",
              "description": "{{$get.query_text}}"
            }
          }
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "padding": "30",
                "spacing": "20",
                "align": "center"
              },
              "components": [
                {
                  "type": "button",
                  "text": "Reload!",
                  "style": {
                    "width": "50",
                    "height": "50",
                    "background": "#007bff",
                    "color": "#ffffff",
                    "font": "HelveticaNeue",
                    "size": "12",
                    "corner_radius": "4"
                  },
                  "action": {
                    "type": "$util.alert",
                    "options": {
                      "title": "Sign in",
                      "description": "Button works",
                      "text": "SUCCESS"
                    }
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "value": "",
                  "placeholder": "username",
                  "style": {
                    "placeholder_color": "#cecece",
                    "font": "HelveticaNeue",
                    "align": "center",
                    "width": "200",
                    "height": "60",
                    "size": "12"
                  }
                }
                ,
                {
                  "type": "textfield",
                  "name": "password",
                  "value": "",
                  "placeholder": "Enter password",
                  "style": {
                    "placeholder_color": "#cecece",
                    "font": "HelveticaNeue",
                    "align": "center",
                    "width": "200",
                    "height": "60",
                    "secure": "true",
                    "size": "12"
                  }
                },
                {
                  "type": "button",
                  "text": "Login",
                  "style": {
                    "width": "50",
                    "height": "50",
                    "background": "#007bff",
                    "color": "#ffffff",
                    "font": "HelveticaNeue",
                    "size": "12",
                    "corner_radius": "4"
                  },
                  "action": {
                    "type": "$network.request",
                    "options": {
                      "url": "https://xcore.fhs.kz/v1/user/login",
                      "method": "post",
                      "data_type": "application/json",
                      "apikey": "52009ff562107968a258b8a91a2ed06cd5271f27",
                      "data": {
                        "login": "{{$get.login}}",
                        "password": "{{$get.password}}"
                      }
                    }
                  },
                  "success": {
                    "type": "$util.alert",
                    "options": {
                      "title": "Sign in",
                      "description": "Login success",
                      "text": "SUCCESS"
                    }
                  },
                  "error": {
                    "type": "$util.alert",
                    "options": {
                      "title": "Error setting global"
                    }
                  }
                },
                {
                  "type": "label",
                  "text": "{ ˃̵̑ᴥ˂̵̑}",
                  "style": {
                    "align": "center",
                    "font": "HelveticaNeue-Bold",
                    "size": "50"
                  }
                }
              ]
            },
            {
              "type": "label",
              "style": {
                "align": "right",
                "padding": "10",
                "color": "#000000",
                "font": "HelveticaNeue",
                "size": "12"
              },
              "text": "Check out Live DEMO",
              "href": {
                "url": "https://jasonette.github.io/Jasonpedia/demo.json",
                "fresh": "true"
              }
            },
            {
              "type": "label",
              "style": {
                "align": "right",
                "padding": "10",
                "color": "#000000",
                "font": "HelveticaNeue",
                "size": "12"
              },
              "text": "Watch the tutorial video",
              "href": {
                "url": "https://www.youtube.com/watch?v=hfevBAAfCMQ",
                "view": "Web"
              }
            },
            {
              "type": "label",
              "style": {
                "align": "right",
                "padding": "10",
                "color": "#000000",
                "font": "HelveticaNeue",
                "size": "12"
              },
              "text": "View documentation",
              "href": {
                "url": "https://jasonette.github.io/documentation",
                "view": "Web"
              }
            }
          ]
        }
      ]
    }
  }
}